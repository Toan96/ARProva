<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/camera_preview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    tools:context=".MainActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <LinearLayout
            android:id="@+id/layoutContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tvGpsValues"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginEnd="5dp"
                android:layout_weight="2"
                android:hint="@string/tvGpsValuesHint"
                android:textAlignment="viewStart"
                android:textColor="#cecece"
                android:textColorHint="#cecece" />

            <FrameLayout
                android:id="@+id/mapContainer"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="bottom|end"
                android:visibility="invisible">

            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvErrorePermessiCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="10dp"
            android:hint="@string/errorePermessiCamera"
            android:maxWidth="110dp"
            android:textAlignment="viewEnd"
            android:textColor="#cecece"
            android:textColorHint="#cecece"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvBearing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="110dp"
            android:layout_marginEnd="67dp"
            android:hint="50Â° NE"
            android:textAlignment="viewEnd"
            android:textColor="#cecece"
            android:textColorHint="#cecece"
            android:visibility="invisible"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="110dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <com.example.antonio.arprova.VerticalSeekBar
                android:id="@+id/seekBarZoom"
                android:layout_width="30dp"
                android:layout_height="220dp"
                android:layout_gravity="end"
                android:max="5"
                android:progress="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:hint="~ km"
                android:textAlignment="viewEnd"
                android:textColor="#cecece"
                android:textColorHint="#cecece"
                android:visibility="invisible"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

</FrameLayout>
